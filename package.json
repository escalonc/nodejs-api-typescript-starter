{
  "name": "nodejs-api-typescript-starter",
  "version": "1.0.0",
  "description": "Node.js api boilerplate built on TypeScript",
  "main": "index.js",
  "scripts": {
    "start": "node ",
    "build": "tsc",
    "test": "jest",
    "migrate": "typeorm migration:generate -n",
    "dev": "nodemon --exec ts-node ./src/index.ts",
    "format": "prettier --write 'src/**/*.{ts,json}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/escalonc/nodejs-api-typescript-starter.git"
  },
  "keywords": [],
  "author": "Christopher Escalon <escalonchristopher@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/escalonc/nodejs-api-typescript-starter/issues"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run test"
    }
  },
  "homepage": "https://github.com/escalonc/nodejs-api-typescript-starter#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "helmet": "^3.21.1",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "pg": "^7.12.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.8.0",
    "signale": "^1.4.0",
    "swagger-ui-express": "^4.1.2",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.19"
  },
  "devDependencies": {
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/helmet": "0.0.44",
    "@types/jest": "^24.0.18",
    "@types/morgan": "^1.7.37",
    "@types/multer": "^1.3.10",
    "@types/node": "^12.7.11",
    "@types/signale": "^1.2.1",
    "@types/swagger-ui-express": "^3.0.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "nodemon": "^1.19.3",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  }
}
