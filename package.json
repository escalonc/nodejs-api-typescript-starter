{
  "name": "nodejs-api-typescript-starter",
  "version": "1.0.0",
  "description": "Node.js api boilerplate built on TypeScript",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/index.js",
    "build": "tsc",
    "test": "jest",
    "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate -n",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "dev": "nodemon --exec ts-node ./src/index.ts",
    "dev:debug": "nodemon --inspect src/index.ts",
    "lint": "eslint src/**/*.ts",
    "format": "yarn prettier -- --write",
    "prettier": "prettier \"**/*.{ts,json,md,graphql}\"",
    "validate": "yarn lint && yarn format && npm run prettier -- --list-different && yarn build",
    "precommit": "lint-staged && yarn test"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/escalonc/nodejs-api-typescript-starter.git"
  },
  "keywords": [],
  "author": "Christopher Escalon <escalonchristopher@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/escalonc/nodejs-api-typescript-starter/issues"
  },
  "homepage": "https://github.com/escalonc/nodejs-api-typescript-starter#readme",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "pg": "^7.12.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.8.0",
    "signale": "^1.4.0",
    "swagger-ui-express": "^4.1.2",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.20",
    "typeorm-typedi-extensions": "^0.2.3"
  },
  "devDependencies": {
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/helmet": "0.0.45",
    "@types/jest": "^24.0.21",
    "@types/morgan": "^1.7.37",
    "@types/multer": "^1.3.10",
    "@types/node": "^12.12.0",
    "@types/signale": "^1.2.1",
    "@types/swagger-ui-express": "^3.0.1",
    "@typescript-eslint/parser": "^2.6.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "nodemon": "^1.19.4",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  }
}
